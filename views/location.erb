<div class="container">
	<div class="row">
		<div class="col-md-12">
			<h3 class="col-md-4">
				<%= @location.name %>
			</h3>
		</div>
		<div class="col-md-12">
			<span class="label">Regions:</span>
			<ul>
				<% @location.regions.each do |region| %>
					<li><%= region.name %></li>
				<% end %>
			</ul>
		</div>
		<div class="col-md-12">
			<span class="label">Properties:</span>
			<ul>
				<% @properties.each do |property| %>
					<li><%= property.id %>/<%= property.slug %></li>
				<% end %>
			</ul>
		</div>

		<% if !@authorised.nil? %>
			<div class="col-md-4">
				<a class="btn btn-primary btn-submit" href="/location/new">Add New Location</a>
			</div>
		<% end %>
	</div>
</div>