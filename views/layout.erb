<!DOCTYPE html>
<html>
	<head>
		<title><%= @page_title %></title>
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<!-- Bootstrap -->
		<link rel="stylesheet" href="/css/select2.css" />
		<link rel="stylesheet" href="/css/magnific-popup.css" />
		<link rel="stylesheet" href="/css/style.css" />

		<!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
		<!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
		<!--[if lt IE 9]>
		  <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
		  <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
		<![endif]-->
		
		<script>document.write('<script src="http://' + (location.host || 'localhost').split(':')[0] + ':35729/livereload.js?snipver=1"></' + 'script>')</script>
		
	</head>
	<body class="<%= @body_class %>">
		<div class="header">
			<div class="container-fluid">
				<div class="navbar navbar-default" role="navigation">
				  <div class="navbar-header">
				    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
				      <span class="sr-only">Toggle navigation</span>
				      <span class="icon-bar"></span>
				      <span class="icon-bar"></span>
				      <span class="icon-bar"></span>
				    </button>
				    <a class="navbar-brand" href="/">Goa Property Co</a>
				  </div>
				  <div class="navbar-collapse collapse">
				    <ul class="nav navbar-nav navbar-right main-nav">
				    	<li id="search-link"><a href="/">Find Properties</a></li>
				    	<li><a href="/about">Real Estate Services</a></li>
				    	<li><a href="/regional-plans">Sell/Lease Property</a></li>
						<li><a href="#">Blog</a></li>
						<li id="contact-link"><a href="/contact">Contact</a></li>
						<li id="phone-number"><a href="#">+91 800 75 000 66</a></li>
				    </ul>
				  </div><!--/.nav-collapse -->
				</div>
			</div>
		</div>
		
		<div id="hidden-form">
			<div class="container">
				<div class="row">
					<div id="search-bar" class="col-md-10 col-md-offset-1">
						<%= erb :_search_form %>
					</div>
				</div>
			</div>
		</div>

		<div class="main">
		      <%if @error then %>
		          <div class="alert alert-error"><%=@error%></div>
		      <% end %>
		      <%= yield %>
		</div>
		
		<%= partial :_footer %>


    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="/vendor/jquery-1.9.1.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="/vendor/bootstrap.js"></script>
    <script src="/vendor/jquery.magnific-popup.min.js" type="text/javascript"></script>
    <script src="/vendor/isotope.pkgd.min.js" type="text/javascript"></script>
    <script src="/vendor/waypoints.min.js" type="text/javascript"></script>
    <script src="/vendor/jquery.anystretch.min.js" type="text/javascript"></script>
    <script src="/vendor/select2.min.js" type="text/javascript"></script>
    <script src="/vendor/jquery.scrollTo.min.js" type="text/javascript"></script>
    <script src="/js/main.js" type="text/javascript"></script>
  </body>
</html>
