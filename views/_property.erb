<li class="property-item <%= property.location.name.downcase %> <%= property.type.name.downcase %> <%= cols %>" 
	data-price="<%= property.price %>" 
	data-area="<%= property.area %>"
	data-date="<%= property.updated_at %>">
	
		<div class="img-block">
			<a href="/property/<%= property.id %>/<%= property.slug %>">
				<img src="/properties/images/thumbs/<%= property.featured_img %>" alt="<%= property.title %> <%= property.type.name %> in Goa" />
			</a>
		</div>
		<div class="data-block">
			<h3 class="prop-title">
				<a href="/property/<%= property.id %>/<%= property.slug %>">
					<span class='prop-string'><%= property.title %> </span>
					<%= "<span class='prop-string'>#{property.type.name}</span>" %> <br />
					<span class="smaller"><%= "in <span class='prop-string'>#{property.location.name}</span>" %></span>
				</a>
			</h3>
			<div class="prop-price">
				<span class="price sort-price">
					<% if property.state_id == 2 %>
						<%= to_currency(property.price) + " / mo" %>
					<% else %>
						<%= to_currency(property.price) %>
					<% end %>
				</span>
			</div>
			<ul class="clearfix">
				<li class="prop-area">
					<div class="block sort-area" data-sort="<%= property.area %>">
						<span class="unit-area"><%= property.area %></span> <span class="unit-label">Sq Mts</span>
					</div>
				</li>
			</ul>
			<span class="prop-code">GPC<%= property.id %></span>
		</div>
</li>