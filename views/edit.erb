

<div class="container">
	<div class="row">
		<div class="col-md-8">
			<form role="form" action="/update" method="post" id="property" enctype="multipart/form-data">
				
				<input name="property[id]" id="property_id" type="hidden" value="<%= @property.id %>">
				<div class="row form-group">
					<div class="col-md-4">
						<input type="text" name="property[title]" id="title" class="demo-control form-control" data-demo="#demo-title" placeholder='Eg. "Old Portuguese", "3BHK", "Spacious"' value="<%= @property.title %>"/>	
					</div>
					
					<div class="col-md-8">					
						<select class="select2 type-select" data-demo="#demo-type-name" name="property[type_id]" id="type_id">
							<% @types.each do |type| %>
								<% if type.id == @property.type.id %>
									<option value="<%= type.id %>" selected="selected"><%= type.name %></option>
								<% else %>
									<option value="<%= type.id %>"><%= type.name %></option>
							<% end %>

							<% end %>
						</select>
						
						<span class="mid-select">in</span>
						
						<select class="select2 location-select" data-demo="#demo-location" name="property[location_id]" id="location_id">
							
							<% @locations.each do |location| %>
								<% if location.id == @property.location.id %>
									<option value="<%= location.id %>" selected="selected"><%= location.name %></option>
								<% else %>
									<option value="<%= location.id %>"><%= location.name %></option>
								<% end %>
							<% end %>
						</select>
					</div>
				</div>
				<div class="clearfix"></div>
				<div class="row form-group">
					<div class="col-md-4">
						<label>Mode</label>
						<select class="select2 state-select" data-demo="#demo-state" name="property[state_id]" id="state_id">
							<% @states.each do |state| %>
								<% if state.id == @property.state.id %>
									<option value="<%= state.id %>" selected="selected"><%= state.name %></option>
								<% else %>
									<option value="<%= state.id %>"><%= state.name %></option>
								<% end %>
							<% end %>
						</select>
					</div>
					
					<div class="col-md-4">
						<label>Property Type</label>
						<select class="select2" name="property[category_id]" id="category_id">
							<% @categories.each do |category| %>
								<% if category.id == @property.category.id %>
									<option value="<%= category.id %>" selected="selected"><%= category.name %></option>
								<% else %>
									<option value="<%= category.id %>"><%= category.name %></option>
								<% end %>
							<% end %>
						</select>
					</div>
					
					<div class="col-md-4">
						<label>Price:</label><br />
						<input type="text" name="property[price]" id="price" class="form-control demo-control" data-demo="#demo-price" placeholder="in Rs." value="<%= to_currency(@property.price) %>" />
					</div>
				</div>
				
				<div class="clearfix"></div>
			

				<div class="form-group">
					<label for="specs">Specifications</label>
					<input type="text" name="property[specs]" id="specs" class="form-control" placeholder="Parking Space, Swimming Pool, Field view, etc." value="<%= @property.specs %>" />	
				</div>
						
				<div class="form-group">
					<div class="row">
						<div class="col-md-4">			
							<label>Area (Sq Mts):</label><br />
							<input type="text" name="property[area]" id="area" class="form-control demo-control" data-demo="#demo-area" value="<%= @property.area %>"/>	
						</div>
						
						
						<div class="col-md-4">
							<label>Built (Sq Mts):</label><br />
							<input type="text" name="property[area_built]" id="area_built" class="form-control" value="<%= @property.area_built %>" />	
						</div>
						
						<div class="col-md-4">
							<label>BHK</label><br />
							<input type="text" name="property[bhk_count]" id="bhk_count" class="form-control" value="<%= @property.bhk_count %>" />	
						</div>
					</div>
				</div>
				
				
				
				<div class="form-group">
					<label for="featured">Featured Image</label>
					<div class="file-input-wrap">
						<img src="/properties/images/<%= @featured_img %>" alt="" width="250">
						<input type="file" id="featured-img-picker" name="featured_img" class="file-picker file-inputs new-feature-file" data-demo="#demo-img" data-filename-placement="inside" title="Change Featured Image" />
					</div>
				</div>
				
				<div class="form-group">	
					<label>Gallery Images</label>		
					<div class="file-input-wrap">
						<ul class="gallery-block row">
						<% @images.each do |image| %>
							<li class="gallery-item col-md-4">
									<div class="img-wrap">
										<img src="/properties/images/<%= image.url %>" alt="" width="200" />
									</div>
									<label for="checkbox">Delete?</label>
									<input type="checkbox" name="gallDels[<%= image.id %>]" />
							</li>
						<% end %>
						</ul>
						<input type="file" name="gallUploads[]" title="+ Gallery Images" class="file-picker file-inputs new-file" data-filename-placement="inside"  multiple />
					</div>
				</div>
				
				
		
				<div class="form-group">
						<input type="Submit" class="btn btn-primary btn-large submit-btn" value="Edit Property">
						
						<button class="btn delete-btn btn-danger btn-large" data-resource-name="<%= @property.title + " " + @property.type.name %><%= " in " + @property.location.name %><%= " for " + @property.state.name %>" data-resource-id="<%= @property.id %>" data-target=".delete-modal" data-type="property">
						  <span class="glyphicon glyphicon-remove"></span>  Delete Property
						</button>
				</div>
				
			</form>
		</div>

		<div class="col-md-4 col-sm-6 col-xs-12 ">
			<h3>Live Preview</h3>
			<div id="demo-property">
				<ul>
					<li class="property-item <%= @property.location.name.downcase %> <%= @property.type.name.downcase %>" data-price="<%= @property.price %>" data-area="<%= @property.area %>"	data-date="<%= @property.updated_at %>">
						<div class="img-block">
							<a href="/property/<%= @property.id %>"><img src="/properties/images/<%= @featured_img %>" alt="" id="demo-img"/></a>
						</div>
						<div class="data-block">
							<h3 class="prop-title">
								<a href="/property/<%= @property.id %>">
									<%= "<span id='demo-title' class='prop-string'>#{@property.title}</span>" %>
									<%= "<span id='demo-type-name' class='prop-string'>#{@property.type.name}</span>" %> <br />
									<span class="smaller"><%= "in <span id='demo-location' class='prop-string'>#{@property.location.name}</span>" %></span> <br />
								</a>
							</h3> 
							<span id="demo-area" class='smaller prop-string'><%= @property.area %></span><span> Sq Mts</span>
							<div class="prop-price">
								<span id="demo-price" class="price sort-price">
									<% if @property.state_id == 2 %>
										<%= to_currency(@property.price) + " / mo" %>
									<% else %>
										<%= to_currency(@property.price) %>
									<% end %>
								</span>
							</div>
						</div>
					</li>
				</ul>
			</div>
		</div>
	</div>
	

</div>
<%= erb :_modal %>