<div class="container">
	<div class="row section">
		<div class="col-md-12">
			<h2>Hi Goa Property Co</h2>
			<p class="lead">You can change pretty much anything from this admin page.</p>
		</div>
	</div>

	<div class="row section">
		<div class="col-md-12">
			<h3 class="title">Properties</h3>
			<a href="/property/new" class="btn btn-large btn-primary">Create New Property</a>
		</div>
		<div class="col-md-12">
			<ul class="list-group">
			  <% @properties.each do |property| %>
			  	<li class="list-group-item clearfix">
			  			<div class="col-md-6">
				  			<a href="/property/<%= property.id %>"><%= property.title %></a>
			  			</div>
			  			<div class="col-md-5 text-right">
				  			<span class="action"><span class="glyphicon glyphicon-pencil"></span> <a href="/property/<%= property.id %>/edit">Edit</a></span>
				  			<span class="action">
				  				<button class="delete-btn" data-resource-name="<%= property.title %>" data-resource-id="<%= property.id %>" data-target=".delete-modal" data-type="property">
				  				  <span class="glyphicon glyphicon-remove"></span>  Delete
				  				</button>
				  			</span>
			  			</div>
			  	</li>
