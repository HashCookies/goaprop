<div class="property-image-grid">
	<div class="container">
		<div class="large img-block anystretch" data-stretch="/properties/images/<%= @property.featured_img %>">

		</div>
		<% @images.each do |image| %>
			<div class="small img-block anystretch" data-stretch="/properties/images/<%= image.url %>">
			</div>
		<% end %>
		
	</div>
</div>

<div class="property-data">
	<div class="container">
		<div class="row">
			<div class="col-md-8">
				<h3 class="prop-title"><div></div>
					<a href="/property/<%= @property.id %>">
						<span><%= @property.title %> </span>
						<%= @property.type.name %> 
						<%= "in " + @property.location.name %>
						<%= "for " + @property.state.name %>
					</a>
				</h3>
				<p class="prop-area">
					<span class="label">Specs</span>
					<%= @property.area %> Sq Mts • <%= @property.specs %>
				</p>
			</div>
			<div class="col-md-4 prop-price-wrap text-right">
				<div class="call-to-action">
					<a href="#" class="btn btn-large btn-primary">Send Inquiry</a>
				</div>
				<div class="price-block">
					<span class="prop-price-label label">Price</span>
					<span class="prop-price"><%= to_currency(@property.price) %></span>
				</div>
			</div>
		</div>
	</div>
</div>


<div id="property-content">
		
	<div class="container">
		<div class="row property-main">
			<div class="col-md-8 prop-specs">
				<ul class="clearfix ">
					<!--<h3>Detailed Specs</h3>-->
					<li class="clearfix">
						<span class="label">Area</span>
						<div class="block">
							<%= @property.area %> Sq Mts
						</div>
					</li>
					<li class="clearfix">
						<span class="label">Built Area</span>
						<div class="block"><%= @property.area_built %> Sq Mts</div>
					</li>
					<li>
						<span class="label">Location</span>
						<div class="block"><%= @property.location.name %></div>
					</li>
					<li class="clearfix">
						<span class="label">Facilities</span>
						<div class="block"><%= @property.specs %></div>
					</li>
					<li class="large">
						<span class="label">Price</span>
						<div class="pull-right">
							
							<div class="price"><span class="prop-price"><%= @property.price %></span></div>
						</div>
					</li>
				</ul>
				
				
				
			</div>
			<div class="col-md-4 inquiry-block">
				<h3>Interested? Let us show you around…</h3>
				<form method="post" action="/send-inquiry">
					<div class="form-group">
						<label for="name" class="hidden">Your name</label>
						<input type="text" name="name" placeholder="Your name" value="" class="form-control" />
					</div>
					
					<div class="form-group">
						<label for="email" class="hidden">Your email</label>
						<input type="text" name="email" placeholder="Your email" value="" class="form-control" />
					</div>
					
					<div class="form-group">
						<textarea class="form-control">I'm interested in "<%= @property.title %> <%= @property.type.name %> in <%= @property.location.name %> for <%= @property.state.name %>" (Code: GPC<%= @property.id %>).</textarea>
					</div>
					
					<div class="form-group text-center">
						<input type="button" name="" value="Send Inquiry" class="btn btn-large btn-primary" />
					</div>
				</form>
			</div>	
			
			
			<div class="clearfix"></div>
					
		</div>		
	</div>
</div>

<div id="inquiry-block">
	<div class="container">
		<div class="row">
				<div class="col-md-12">
					<h4 class="label">Recently Viewed</h4>				
					<ul id="property-grid" class="row viewed">
						<% @viewed.each do |property| %>
							<%= erb :_property, :labout => false, :locals => {:property => property} %>
						<% end %>
					</ul>
				</div>
				
		</div>		
	</div>
</div>

<div class="offwhite-block">
	<div class="container">
		<div class="content">
			<h3 class="section-title">Similar Properties</h3>
			<ul id="property-grid" class="row">
				<% @similar.each do |property| %>
					<%= erb :_property, :layout => false, :locals => {:property => property} %>
				<% end %>
			</ul>
		</div>
	</div>
</div>