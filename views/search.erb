
<div class="grid-wrap">
	<div class="results-title">
		<div class="container">
			
		</div>
	</div>
	
	<div class="container content">
		<div class="row">
			<div class="col-md-2 filters">
				<span class="label">Locations</span>
				<ul class="list-group" id="location-filter">
					<li class="list-group-item active">
						<span class="badge"><%= @properties.count %></span>
						<a href="#" data-filter="*">All</a>
					</li>
					<% @locations.each do |location| %>
						<li class="list-group-item">
							<span class="badge"><%= location.propertys(:state_id => @buyrent, :category_id => @category).count %></span>
							<a href="#" data-filter=".<%= location.name.downcase %>"><%= location.name %></a>
						</li>
					<% end %>
				</ul>
				
				<span class="label">Sort by</span>
				<ul class="list-group" id="sort-filter">
					<li class="list-group-item active" data-sort-value="date"><a href="#">Newest</a> <span class="glyphicon glyphicon-ok-sign"></span></li>
					<li class="list-group-item" data-sort-value="price"><a href="#">Price</a></li>
					<li class="list-group-item" data-sort-value="area"><a href="#">Area</a></li>
				</ul>
			</div>
			<div class="col-md-10">
		
				<%= erb :_properties_grid %>
			
			</div>
		</div>
	</div>
</div>