<div class="results-title">
	<h3>Searching <strong><%= @properties.count %> properties</strong> in <strong><%= @region.name %> <span class="caret"></span></strong></h3>
	<button class="btn btn-large btn-primary pull-right">Search Again</button>
</div>
<div class="grid-wrap">
	<div class="container content">
		<div class="col-md-2 filters">
			<span class="label">Locations</span>
			<ul class="list-group">
				<li class="list-group-item active">
					<span class="badge"><%= @properties.count %></span>
					All
				</li>
				<% @locations.each do |location| %>
					<li class="list-group-item">
						<span class="badge"><%= location.propertys(@buyrent => true, @category => true).count %></span>
						<%= location.name %>
					</li>
				<% end %>
			</ul>
			
			<span class="label">Sort by</span>
			<ul class="list-group">
				<li class="list-group-item">Newest <span class="glyphicon glyphicon-ok-sign"></span></li>
				<li class="list-group-item">Price</li>
				<li class="list-group-item">Area</li>
			</ul>
		</div>
		<div class="col-md-10">
	
			<%= erb :_properties_grid %>
		
		</div>
	</div>
</div>