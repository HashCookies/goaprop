<div class="container">
	<form role="form" action="/location/create" method="post" id="location" enctype="multipart/form-data">
		
		<div class="form-group">
				<label>Location Name:</label><br />
				<input type="text" name="location[name]" id="name" class="form-control" />	
		</div>
		
		<label for="Region">Regions</label>
		
			<% @regions.each do |region| %>
				<label class="checkbox-inline">
					<% if region.id == 1 %>
						<input type="checkbox" checked="checked" name="region[<%= region.id %>]" id="region[<%= region.id %>]" value="<%= region.id %>"><%= region.name %>
					<% else %>
						<input type="checkbox" name="region[<%= region.id %>]" id="region[<%= region.id %>]" value="<%= region.id %>"><%= region.name %>
					<% end %>
				</label>
			<% end %>
		<div class="form-group">
				<input type="Submit" class="btn btn-primary btn-large submit-btn" value="Create New Location">
		</div>
	</form>
</div>