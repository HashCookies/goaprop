<div class="container">
	<div class="row">
		
		<div class="col-md-8 blog-post">
		
			<h1  class="blog-title">
				Goa Property Blog
			</h1>
					
		<div class="row categories">

			<div class="col-md-4 col-xs-12" id="articles">	
			<div class="blog-cat-img"><img src="/images/knowledge.png"></div>			
				<h3>news</h3>
				<% @news.each do |post| %>
				<ul class="post-links">
					<li>
						<a href="/blog/<%= post['id'] %>/<%= post['slug'] %>"><%= post['title'] %></a>
					</li>
				</ul>
				<% end %>
				</div>
			<div class="col-md-4 col-xs-12" id="articles">	
			<div class="blog-cat-img"><img src="/images/knowledge.png">	</div>
				<h3>articles</h3>	
				<% @articles.each do |post| %>
				<ul class="post-links">
					<li>
						<a href="/blog/<%= post['id'] %>/<%= post['slug'] %>"><%= post['title'] %></a>
					</li>
				</ul>
				<% end %>
				
			</div>
				
			<div class="col-md-4 col-xs-12" id="articles">
			<div class="blog-cat-img"><img src="/images/knowledge.png">	</div>
				<h3>knowledge</h3>
				<% @knowledge.each do |post| %>
				<ul class="post-links">
					<li >
					<a href="/blog/<%= post['id'] %>/<%= post['slug'] %>"><%= post['title'] %></a>
					</li>
				</ul>
				<% end %>
				
			</div>

			</div>	
		</div>

		<div class="col-md-4">
		
			<ul id="property-grid">
			<% @properties.each do |property| %>
			<%= erb :_property, :layout => false, :locals => {
				:property => property,  
				:cols => "col-xs-12"} %>
			<% end %>
		</ul>
			
		</div>

	</div>

</div>

<% erb :_footer %>
