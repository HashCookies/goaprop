<ul id="property-grid">
	<% @properties.each do |property| %>
		<li class="col-md-4 col-sm-6 col-xs-12 property-item <%= property.classlist %>" 
			data-price="<%= property.price %>" 
			data-area="<%= property.area %>"
			data-date="<%= property.updated_at %>">
			
				<div class="property-item-inner">
					<div class="img-block">
						<a href="/property/<%= property.id %>/<%= property.slug %>">
							<img src="/properties/images/thumbs/<%= property.featured_img %>" alt="" />
						</a>
					</div>
					<div class="data-block">
						<h3 class="prop-title">
							<a href="/property/<%= property.id %>/<%= property.slug %>">
								<%= "<span class='prop-string'>#{property.title}" %>
								<%= "#{property.type.name}</span>" %> <br />
								<span class="smaller"><%= "in <span class='prop-string'>#{property.location.name}</span>" %></span> <br />
								
							</a>
							
						</h3> 
						<span class='smaller prop-string'><span class="unit-area"><%= property.area %></span> <span class="unit-label">Sq Mts</span></span>
						<div class="prop-price">
							<span class="price sort-price">
								<%= to_currency(property.price, property.state_id) %>
							</span>
						</div>
					</div>
				</div>
		</li>
	<% end %>
</ul>