<ul id="property-grid">
<% @properties.each do |property| %>
	<li class="col-md-4 col-sm-6 col-xs-12 property-item">
			<div class="img-block col-md-12">
				<span class="prop-price"><%= property.price %></span>
				<a href="/property/<%= property.id %>"><img src="/properties/images/<%= property.featured_img %>" alt="" /></a>
			</div>
			<div class="col-md-12">
				<h3 class="prop-title">
					<a href="/property/<%= property.id %>">
						<%= property.title %> 
						<%= property.type %> 
						<%= "in " + property.location %>
						<%= "for Sale" if property.for_buy == true %>
						<%= "for Rent" if property.for_rent == true %>
					</a>
					</h3>
				<ul>
					<li>3200 Sq Mt</li>
					<li>Specs: Bathroom, 3BHK, Parking</li>
				</ul>
			</div>
	</li>
<% end %>
</ul>