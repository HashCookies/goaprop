<div class="container">
	<div class="row">

		<div class="col-md-8 blog-post">
			
			<%= partial :_blog_header %>

			<div class="post-links" >
			<% if @knowledge %>
				<% @knowledge.each do |post| %>
					<ul >
						<li class="post-link">
						<a href="/blog/<%= (post['tags'].first).downcase %>/<%= post['id'] %>/<%= post['slug'] %>"><%= post['title'] %></a> <span class="post-date"><%= post['date'].split(' ').first %></span>
						</li>
					</ul>
					<% end %>
			
			<% elsif @news %>
				
				<% @news.each do |post| %>
					<ul>
						<li class="post-link">
						<a href="/blog/<%= (post['tags'].first).downcase  %>/<%= post['id'] %>/<%= post['slug'] %>"><%= post['title'] %></a> <span class="post-date"><%= post['date'].split(' ').first %></span>
						</li>
					</ul>
				<% end %>
				

			<% elsif @articles %>
				
				<% @articles.each do |post| %>
					<ul >
						<li class="post-link">
							<a href="/blog/<%= (post['tags'].first).downcase  %>/<%= post['id'] %>/<%= post['slug'] %>"><%= post['title'] %></a> <span class="post-date"><%= post['date'].split(' ').first %></span>
						</li>
					</ul>
				<% end %>

			<% end %>

		</div>		
		</div>	
		<div class="col-md-4">
		
		<ul id="property-grid">
			<h2>Properties list</h2>
			<% @properties.each do |property| %>
				<%= erb :_property, :layout => false, :locals => {
					:property => property,  
					:cols => "col-xs-12"} %>
			<% end %>
		</ul>
		</div>
	</div>
</div>

			



